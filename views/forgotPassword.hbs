<style>
    .forgot-password-form {
        width: 400px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .forgot-password-form h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    .forgot-password-form form {
        display: flex;
        flex-direction: column;
    }

    .forgot-password-form .form-control {
        display: flex;
        flex-direction: column;
        margin-bottom: 10px;
    }

    .forgot-password-form .form-control label {
        margin-bottom: 5px;
    }

    .forgot-password-form .form-control input {
        padding: 5px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .forgot-password-form button {
        padding: 5px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #ddd;
        cursor: pointer;
    }

    .forgot-password-form button:hover {
        background-color: #ccc;
    }
</style>
<div class="forgot-password-form">
    <h1>Forgot Password</h1>
    <form action="/v1/forgot-password" method="POST">
        <div class="form-control">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" placeholder="Enter email" />
        </div>
        <button type="submit">Submit</button>
    </form>
</div>

<script>
    // Check if localStorage has a user
    const user = JSON.parse(localStorage.getItem('user'));

    // If user is present, redirect to main page
    if (user._id) {
        window.location.href = '/';
    }
</script>